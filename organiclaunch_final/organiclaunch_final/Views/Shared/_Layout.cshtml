<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/unslider.css" rel="stylesheet" />
    <link href="~/Content/unslider-dots.css" rel="stylesheet" />
</head>
<body>
    
        <div class="">
            @*<div class="logo">
                @Html.ActionLink("Organic Launch", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>*@         
            <div class="banner" style="text-align:center;">
                <ul>
                    <li>
                        <div class="cover-slides apples">
                            <h1>Organic Launch</h1>
                            <h2>We provide awareness for farmers</h2>
                        </div>
                    </li>
                    <li>
                        <div class="cover-slides oranges">
                            <h1>Organic Launch</h1>
                            <h2>Someting else</h2>
                        </div>
                    </li>
                </ul>
            </div>  
        </div>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span style="color:#fff;">Menu</span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Home", "Index", "Product")</li>
                        <li class="dropdown">
                            @Html.ActionLink("Meat", "Meat", "Product", new { area = "" }, new { @class = "dropdown-toggle" })
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Meat", "Meat", "Product")</li>
                                <li><a href="#">Page 1-2</a></li>
                                <li><a href="#">Page 1-3</a></li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Produce", "Produce", "Product")</li>
                        <li><a href="#">Dairy</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
   
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/unslider-min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(function () {
            $('.banner').unslider({
                autoplay: true,
                arrows: true
            })
        })
    </script>
</body>
</html>